{
  "version": 2,
  "framework": null,
  "buildCommand": "npm ci && npm run build",
  "outputDirectory": "movies-app/dist/browser",
  "cleanUrls": true,
  "trailingSlash": false,
  "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/(.*)\\.(?:js|css|svg|png|jpg|jpeg|gif|webp|ico|woff2?)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}
